<h1>Editar Aluno</h1>
<form action="/aluno/edit/<%= aluno.id %>" method="POST">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" id="nome" name="nome" value="<%= aluno.nome %>" required>
  </div>

  <div class="form-group">
    <label for="horario">Horário</label>
    <input type="text" class="form-control" id="horario" name="horario" value="<%= aluno.horario %>" required>
  </div>

  <div class="form-group">
    <label for="matricula">Matrícula</label>
    <input type="text" class="form-control" id="matricula" name="matricula" value="<%= aluno.matricula %>" required>
  </div>

  <div class="form-group">
    <label for="itinerario">Itinerário</label>
    <input type="text" class="form-control" id="itinerario" name="itinerario" value="<%= aluno.itinerario %>" required>
  </div>

  <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
