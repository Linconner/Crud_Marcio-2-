<h1>Professores</h1>
<a href="/professores/add" class="btn btn-success mb-3">Add Professor</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% professores.forEach(professor => { %>
        <tr>
            <td><%= professor.id %></td>
            <td><%= professor.nome %></td>
            <td>
                <a href="/professores/edit/<%= professor.id %>" class="btn btn-warning">Editar</a>
                <form action="/professores/delete/<%= professor.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>