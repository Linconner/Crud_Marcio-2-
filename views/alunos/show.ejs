<h1>Alunos</h1>
<a href="/alunos/add" class="btn btn-success mb-3">Add Aluno</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th >Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% alunos.forEach(aluno => { %>
        <tr>
            <td><%= aluno.id %></td>
            <td><%= aluno.nome %></td>
            <td>
                <a href="/alunos/edit/<%= aluno.id %>" class="btn btn-warning">Editar</a>
                <form action="/alunos/delete/<%= aluno.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>